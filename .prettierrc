{
    "useTabs": false,
    "tabWidth": 4,
    "semi": true,
    "trailingComma": "es5",
    "printWidth": 100,
    "bracketSameLine": true,

    "overrides": [
        { "files": "*.yml", "options": { "tabWidth": 2 } },
        { "files": "*.html", "options": { "tabWidth": 2 } },
        { "files": "*.json", "options": { "tabWidth": 2 } },
        { "files": "*.md", "options": { "tabWidth": 2, "printWidth": 80 } }
    ]
}
